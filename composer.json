{
    "name": "base-php/base-php",
    "description": "Un framework para minimalistas",
    "type": "project",
    "license": "MIT",
    "version": "1.9.06",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Nisa Delgado",
            "email": "nisadelgado@gmail.com"
        }
    ],
    "require": {
        "base-php/core": "1.9.06",
        "illuminate/database": "11.6.0",
        "illuminate/pagination": "11.6.0",
        "illuminate/routing": "11.6.0",
        "illuminate/validation": "11.6.0",
        "illuminate/view": "11.6.0",
        "league/flysystem": "3.27.0",
        "phpmailer/phpmailer": "6.9.1"
    },
    "require-dev": {
        "fakerphp/faker": "1.23.1",
        "laravel/pint": "1.15.3",
        "nunomaduro/collision": "8.1.1",
        "pestphp/pest": "2.34.7",
        "psy/psysh": "0.12.3",
        "spatie/ignition": "1.14.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "vendor/base-php/core/bootstrap/autoload.php"
        ]
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "base-php/core",
                "version": "1.9.06",
                "dist": {
                    "url": "https://github.com/base-php/core/archive/refs/heads/main.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "scripts": {
        "pre-install-cmd": [
            "composer clear-cache"
        ],
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
