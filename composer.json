{
    "name": "base-php/base-php",
    "description": "Un framework para minimalistas",
    "type": "project",
    "license": "MIT",
    "version": "1.10.19",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Nisa Delgado",
            "email": "nisadelgado@gmail.com"
        }
    ],
    "require": {
        "base-php/core": "1.10.19",
        "illuminate/database": "12.39.0",
        "illuminate/pagination": "12.39.0",
        "illuminate/routing": "12.39.0",
        "illuminate/validation": "12.39.0",
        "illuminate/view": "12.39.0",
        "league/flysystem": "3.30.2",
        "phpmailer/phpmailer": "7.0.0",
        "symfony/yaml": "7.3.5"
    },
    "require-dev": {
        "fakerphp/faker": "1.24.1",
        "laravel/pint": "1.25.1",
        "nunomaduro/collision": "8.8.3",
        "pestphp/pest": "4.1.4",
        "psy/psysh": "0.12.14",
        "spatie/ignition": "1.15.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "vendor/base-php/core/bootstrap/autoload.php"
        ]
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "base-php/core",
                "version": "1.10.19",
                "dist": {
                    "url": "https://github.com/base-php/core/archive/refs/heads/main.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "scripts": {
        "dev": [
            "php base serve"
        ],
        "pre-install-cmd": [
            "composer clear-cache"
        ],
        "post-install-cmd": [
            "composer dump-autoload --optimize",
            "php base migrate"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
